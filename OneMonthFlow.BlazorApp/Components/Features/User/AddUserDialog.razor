        //     new TechStackModel { TechStackId = "ts5", TechStackCode = "ANGULAR", TechStackName = "Angular", TechStackShortCode="Angular" }
        // };
    }


    private async Task SubmitAsync()
    {
        if (form == null) return;
        await form.Validate();

        if (form.IsValid)
        {
            isSubmitting = true;
            // Update Request.TechStackCodes from the SelectedTechStackMap
            Request.TechStackCodes = SelectedTechStackMap.Where(kvp => kvp.Value).Select(kvp => kvp.Key).ToList();

            var result = await UserService.CreateUserAsync(Request);
            isSubmitting = false;

            if (result.IsSuccess)
            {
                Snackbar.Add("User created successfully", Severity.Success);
                MudDialog?.Close(DialogResult.Ok(true));
            }
            else
            {
                HandleError(result);
            }
        }
    }

    private void HandleError<T>(Result<T> result)
    {
        if (result == null || string.IsNullOrEmpty(result.Message))
        {
            Snackbar.Add("An unexpected error occurred.", Severity.Error);
            return;
        }
        // Assuming Message might contain multiple errors separated by a convention (e.g., newline or semicolon)
        var errorMessages = result.Message.Split(new[] { ';', '\n' }, StringSplitOptions.RemoveEmptyEntries);
        foreach (var error in errorMessages)
        {
            Snackbar.Add(error.Trim(), Severity.Error); // Using Error severity for all backend errors for now
        }
    }

    private void Cancel() => MudDialog?.Cancel();
}